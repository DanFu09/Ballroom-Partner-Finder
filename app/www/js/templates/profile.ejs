<h1 style="text-align:left"><%=firstName+" "+lastName %></h1>

<div class="padded" align="left">
  <p><b>Email:</b> <%= email %>
  <br><b>Gender:</b> <%= sex %>
  <br><b>Age:</b> <%= age %>
  <br><b>Height:</b> <%= height+" in" %></p>
</div>

<table class="table">
    <thead>
      <tr>
        <th>Style</th>
        <th>Level</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% var length = styles.length %> 
    	<% for (var i = 0; i < length; i++) { %>  
    		<tr class = 'header shower'  attri=<%="select"+i%>>
      		<td attri=<%="select"+i%>><%= styles[i].name%></td>
      		<td attri=<%="select"+i%>><%= styles[i].division+", "+styles[i].level%></td>
          <%if (this.mainUser === this.user){%>
            <td attri=<%="select"+i%>>
              <button type="button" class="btn btn-default" aria-label="Left Align">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              </button>
            </td>
          <%};%>
    		</tr>
        <tr style="display:none" class=<%='select'+i%> >
          <td><%="Leader"%></td>  
        </tr>
        <tr style="display:none" class=<%='select'+i%> >
          <%if (styles[i].searching === 1){%>
            <td><%="Looking for partner"%></td>
          <% } else{ %>
            <td><%="Not looking for partner"%></td>
          <% } %>
        </tr>
        <tr style="display:none" class=<%='select'+i%> >
          <td><%="Hours committed: "+styles[i].hours%></td>  
        </tr>
		<% } %>
    </tbody>
  </table>
<%if (this.mainUser === this.user){%>
<a href="#settings"><button type="button" class="btn btn-default">Add Style</button></a>
<%}%>
